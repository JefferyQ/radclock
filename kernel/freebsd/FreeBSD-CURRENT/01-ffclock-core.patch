+/*
+ * Convert a time interval in RAW counter units to time in second and add it to
+ * a timestamp in bintime format.
+ */
+static __inline void
+add_ffdelta2bintime(ffcounter ffdelta, struct bintime *bt, struct ffclock_estimate *cest)
+{
+	struct bintime delta, shortterm, acc;
+	u_int delta_max;
+
+	delta.sec = 0;
+	delta.frac = cest->period;
+	shortterm.sec = 0;
+	shortterm.frac = cest->period_shortterm;
+	bintime_sub(&shortterm, &delta);
+
+	/*
+	 * The ffcounter type may be larger than the u_int type used by bintime.
+	 * Make sure we eat counter cycles to prevent problems.
+	 */
+	delta_max = (u_int) ((1LLU << (8 * sizeof(u_int))) - 1);
+	while (ffdelta > delta_max) {
+		acc = delta;
+		bintime_mul(&acc, delta_max);
+		bintime_add(bt, &acc);
+
+		acc = shortterm;
+		bintime_mul(&acc, delta_max);
+		bintime_add(bt, &acc);
+
+		ffdelta -= delta_max;
+	}
+
+	bintime_mul(&delta, (u_int) ffdelta);
+	bintime_mul(&shortterm, (u_int) ffdelta);
+	bintime_add(bt, &delta);
+	bintime_add(bt, &shortterm);
+}
